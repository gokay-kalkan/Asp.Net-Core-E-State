@model Image 
@{
    ViewData["Title"] = "ImageUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="col-md-4">
            <div class="form-group">
                <div class="form-group">
                    <form method="post" asp-controller="AdminAdvert" asp-action="ImageUpdate" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()


                        <div>
                            <input asp-for="Id" hidden />
                            <input type="hidden" asp-for="AdvertId" />
                            <input type="file" asp-for="File" />
                            <br />
                            <button type="submit" class="btn btn-warning">Güncelle</button>





                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

