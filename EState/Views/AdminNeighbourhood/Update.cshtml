@model Neighbourhood
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <form method="post" asp-action="Update">
                            <div asp-validation-summary="ModelOnly"></div>
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(X=>X.NeighbourhoodId)
                            <label>Mahalle Adı</label>
                            <input type="text" class="form-control" asp-for="NeighbourhoodName" />
                            <span asp-validation-for="NeighbourhoodName" class="text-danger"></span>
                            <br />
                            <label>Semt Adı</label>
                            <select asp-for="DistrictId" class="form-control">
                                <option value="0" selected>Seçiniz</option>
                                @foreach (var item in ViewBag.district)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }

                            </select>
                            <br />
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

