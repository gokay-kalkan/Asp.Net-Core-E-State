@model Situation
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <form method="post" asp-action="Add">
                            <div asp-validation-summary="ModelOnly"></div>
                            @Html.AntiForgeryToken()
                            <label>Durum Adı</label>
                            <input type="text" class="form-control" asp-for="SituationName" />
                            <span asp-validation-for="SituationName" class="text-danger"></span>
                            <br />
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


