@model EntityLayer.Entities.Type
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <form method="post" asp-action="Add">
                            <div asp-validation-summary="ModelOnly"></div>
                            @Html.AntiForgeryToken()
                            <label>Tip Adı</label>
                            <input type="text" class="form-control" asp-for="TypeName" />
                            <span asp-validation-for="TypeName" class="text-danger"></span>
                            <br />
                            <label>Durum Adı</label>
                            <select asp-for="SituationId" class="form-control">
                                <option value="0" selected>Seçiniz</option>
                                @foreach (var item in ViewBag.situation)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }

                            </select>
                            <br />
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

