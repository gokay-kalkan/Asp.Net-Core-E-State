@model Advert
@{
    ViewData["Title"] = "ImageCreate";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-4">
                <div class="form-group">



                    <form method="post" asp-action="ImageCreate" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AdvertId" />
                        <input type="file" asp-for="Image" multiple />
                        <br />
                        <button type="submit" class="btn btn-warning">Resimleri Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

